<div class="modal-body">

  <div class="card-body">
    <div class="avatar">
      <div class="icon-link">
        <i class="bi bi-facebook"></i>
      </div>
      <div class="image-avatar">
        <% if @coach.coach_avatar.attached? %>
          <img src="<%= url_for(@coach.coach_avatar) %>" class= "invite-avatar rounded-circle ">
        <% else %>
          <img src="<%= asset_path('avatar/no_avatar.png') %>" class="img-fluid rounded-circle mb-3">
        <% end %>
      </div>
      <div class="icon-link">
        <i class="bi bi-linkedin"></i>
      </div>
    </div>
    <br>
    <h6 class="coach-name"><%= @coach.name %></h6>
    <p class="status">Current coach</p>

    <% if @coach.about %>
      <p class="coach-info"><%= @coach.about %></p>
    <% else %>
      <p class="coach-info">No information about.</p>
    <% end %>
    <p class="coach-info"><%= @coach.age %> years | <%= @coach.gender %> | <%= @coach.invitations.where(status:true).count%> users</p>
    <p class="tages-info">Areas of Expertise</p>
      <% @coach.problems.each do |coach_problem|%>
        <span class="tags"><%= coach_problem.title %></span>
      <% end %>
    <p class="tages-info">Education</p>
      <% @coach.diplomas&.each do |diploma|%>
        <p class="education-data"><%= diploma.title %></p>
      <% end %>
    <p class="tages-info">Work experience</p>
      <% @coach.experiences&.each do |experience|%>
        <p class="education-data"><%= experience.title %></p>
      <% end %>
    <p class="tages-info">Licenses and Certificates</p>
      <% @coach.certificates&.each do |certificate|%>
        <p class="education-data"><%= certificate.title %></p>
      <% end %>
    <br>
    <% if @invitation.nil? %>
      <div class="send-an-inv"><%= button_to 'SEND AN INVITATION', class: "get_down_link" %></div>
    <% else %>
      <hr>
      <div class="date-info">You cannot invite a coach.</div>
      <div class="date-info">First, complete the cooperation with your current coach.</div>
    <% end %>
  </div>

</div>